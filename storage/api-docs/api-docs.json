    "paths": {
        "/api/v1/user/register": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Register a new user",
                "description": "Create a new user account (regular or guest) with device information",
                "operationId": "9c03ad4471d360e87a905e27012d33bf",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "full_name",
                                    "device_id",
                                    "is_guest"
                                ],
                                "properties": {
                                    "email": {
                                        "description": "Required if is_guest=false",
                                        "type": "string",
                                        "format": "email",
                                        "example": "user@example.com"
                                    },
                                    "password": {
                                        "description": "Required if is_guest=false",
                                        "type": "string",
                                        "format": "password",
                                        "example": "password123"
                                    },
                                    "full_name": {
                                        "type": "string",
                                        "example": "John Doe"
                                    },
                                    "device_id": {
                                        "type": "string",
                                        "example": "device-uuid-123"
                                    },
                                    "device_type": {
                                        "type": "string",
                                        "enum": [
                                            "android",
                                            "ios",
                                            "web"
                                        ],
                                        "example": "android"
                                    },
                                    "device_name": {
                                        "type": "string",
                                        "example": "Samsung Galaxy S21"
                                    },
                                    "fcm_token": {
                                        "type": "string",
                                        "example": "fcm-token-123"
                                    },
                                    "is_guest": {
                                        "type": "boolean",
                                        "example": false
                                    },
                                    "language": {
                                        "type": "string",
                                        "example": "en"
                                    },
                                    "currency": {
                                        "type": "string",
                                        "example": "USD"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "User registered successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "User registered successfully"
                                        },
                                        "data": {
                                            "properties": {
                                                "user": {
                                                    "$ref": "#/components/schemas/User"
                                                },
                                                "device": {
                                                    "$ref": "#/components/schemas/UserDevice"
                                                },
                                                "token": {
                                                    "type": "string",
                                                    "example": "1|abc123..."
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation error"
                    },
                    "401": {
                        "description": "Invalid API key"
                    }
                },
                "security": [
                    {
                        "apiKey": []
                    }
                ]
            }
        },
